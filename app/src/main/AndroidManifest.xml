<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeroendebusser.aspiemeltdown"
    android:versionCode="100"
    android:versionName="1.0">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".Chat"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_chat"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".SettingsChooserActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeroendebusser.aspiemeltdown.Main" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".SettingsChooserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeroendebusser.aspiemeltdown.SettingsChooserActivity" />
        </activity>
        <activity
            android:name=".SplashEditActivity"
            android:label="Edit"
            android:parentActivityName=".SettingsChooserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeroendebusser.aspiemeltdown.SettingsChooserActivity" />
        </activity>
    </application>

</manifest>
